<% include ../partials/header.ejs%>

<h><%= currentUser%></h>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View your hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary tbn-large" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>
    </header>


    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap">
        <% for (var i=0; i<campgrounds.length; i++){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campgrounds[i].image %>">
                <div class="caption">
                    <h4><%=campgrounds[i].name;%> </h4>
                </div>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campgrounds[i]._id%>">More info </a>
                </p>
            </div>
        </div>
        <%}%>
    </div>

    <br>

    <a href="/">Link to Home Page</a>

    <% include ../partials/footer.ejs%>
</div>


